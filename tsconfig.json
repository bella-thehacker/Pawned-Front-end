{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["dom", "esnext"],

    "types": ["node"],
  
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
